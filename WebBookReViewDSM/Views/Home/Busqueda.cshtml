
@{
    ViewBag.Title = "Home Page";

    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<!DOCTYPE html>

<form action="~/Home/Resbusqueda" method="get" style="        display: flex;
        flex-direction: column;
        background-image: url(https://i.pinimg.com/originals/d7/39/53/d7395358fcd0b0c671bd0ae05b5ba5eb.jpg);
        border-radius: 2em;
        margin-bottom: 1em;
        padding: 5em;
        font-size: 1.4em;
">
    <h1  style="margin: auto auto 1em auto"><b>Búsqueda</b></h1>
    <div class="form-group" style="margin: auto;width:30%;">
        <label for="exampleFormControlInput1">Nombre libro</label>
        <input type="text" name="lib" class="form-control" id="exampleFormControlInput1" placeholder="Nombre librito">
    </div>
    <div class="form-group"  style="margin: auto;width:30%;">
        <label for="exampleFormControlSelect1">Genero</label>
        <select class="form-control" id="exampleFormControlSelect1" name="genero">
            <option>Vacio</option>
            <option>Terror</option>
            <option>Terror 2</option>
            <option>Drama</option>
            <option>Teatro</option>
        </select>
    </div>
    <div class="form-group"  style="margin: auto;width:30%;">
        <label for="exampleFormControlInput1">Autor</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Nombre autor" name="aut">
    </div>
    <div class="form-group"  style="margin: auto auto 2em auto;width:30%;">
        <label for="exampleFormControlInput1">Más barato que</label>
        <input type="number" class="form-control" id="exampleFormControlInput2" placeholder="Precio" name="pre" value="400">
    </div>
    <button type="submit" class="btn btn-primary" style="width:30%;margin:auto;">Buscar</button>
</form>