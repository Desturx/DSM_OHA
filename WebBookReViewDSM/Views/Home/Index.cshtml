
@model IEnumerable<WebBookReViewDSM.Models.LibroViewModel>

<div style=" position: absolute;
        top: 14%;
        left: 0;
        width: 100%;
        height: 47%;
        background-image: url(https://i.pinimg.com/originals/0a/67/52/0a6752b7cd35fc441c1528ee5078384d.jpg)"></div>
<div class="container-fluid">
    <h1 style="font-size:4em"> Libros </h1>
    <div class="row" style="  border-radius:2em;display:flex; flex-direction:row; padding:3em; margin-bottom:1em">
        @{
            int count = 0;
        }
        @foreach (var item in Model)
        {
            if (count < 5)
            {
                <div class="col-lg-12" style="display:flex; flex-direction:column">
                    <div>
                        <a href="~/libro/libro_user/@Html.DisplayFor(modelItem => item.libroID)"> <img class="fotoindex" height="300" width="200" src="~/imgs/@Html.DisplayFor(modelItem => item.portada)" /> </a>
                    </div>
                    <div class="row" style="display: flex; flex-direction: row; margin:auto">
                        <p style="font-size:1.5em; background-color:white;padding:4px; border-radius:1em;"><b> @Html.DisplayFor(modelItem => item.nombre)</b></p>
                        <button class="btn-default" type="button" name="Favoritos"></button>
                    </div>
                </div>
                count++;
            }


        }

    </div>
    
</div>


@{
    Html.RenderAction("Shared_Clubs", "Home");
}