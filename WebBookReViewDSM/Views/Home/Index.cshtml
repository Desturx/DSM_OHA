
@model IEnumerable<WebBookReViewDSM.Models.LibroViewModel>


<div class="container-fluid">
    <h1 style="font-size:4em;"> Libros </h1>
    <div class="row row-propia">
        @{
            int count = 0;
        }
        @foreach (var item in Model)
        {
            if (count < 5)
            {
                <div class="col-propia" style="display:flex;flex-direction:column">
                    <div>
                        <a href="~/libro/libro_user/@Html.DisplayFor(modelItem => item.libroID)"> <img height="300" width="200" src="~/imgs/@Html.DisplayFor(modelItem => item.portada)" /> </a>
                    </div>
                    <div class="row" style="display: flex; flex-direction: row; margin:auto; width: 100%;">
                        <p style="font-size:1.5em; "><b> @Html.DisplayFor(modelItem => item.nombre)</b></p><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark" style="margin:1em 0 0 1em" viewBox="0 0 16 16">
    <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z" />
</svg>
                    </div>
                </div>
                count++;
            }


        }




    </div>

</div>



@{
    Html.RenderAction("Shared_Clubs", "Home");
}