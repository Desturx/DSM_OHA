
@model IEnumerable<WebBookReViewDSM.Models.Club_lecViewModel>

@{
    ViewBag.Title = "Home Page";

    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h1 style="font-size:4em">Circulos de lectura recomendados</h1>
<div style="display: flex; flex-direction: row">
    @{
        int count = 0;
        string path = HttpContext.Current.Request.Url.AbsolutePath;
        string[] cosas = path.Split('/');
    }
    @foreach (var item in Model)
    {
        if (count < 3 && cosas[cosas.Length - 1] == item.lectura.ToString())
        {
            <div class="row" style="display: flex; flex-direction: row">
                <div class="row" style="display: flex; flex-direction: row">
                    <img height="300" width="200" src="~/imgs/@Html.DisplayFor(modelItem => item.lecturatotal.Portada)" />
                    <div class="col-lg-12" style="width: 10em; font-size: 1.2em;">
                        <p><b style="font-size:1em">Nombre:</b>  @Html.DisplayFor(modelItem => item.nombrelibro)</p>
                        <p><b style="font-size:1em">Genero:</b>  @Html.DisplayFor(modelItem => item.lecturatotal.Genero)</p>
                        <p><b style="font-size:1em">Mensualidad:</b>  @Html.DisplayFor(modelItem => item.mensualidad)</p>
                        <p><b style="font-size:1em">Pagina actual:</b>  @Html.DisplayFor(modelItem => item.paginaActual)</p>
                    </div>
                </div>
            </div>
            count++;
        }
    }
    @if (count == 0) {
    <h1>No se han encontrado clubs de este libro,crea tu uno!</h1>
    <h2> noseque noseque link aqui </h2>
    }
</div>  