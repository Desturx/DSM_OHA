@model IEnumerable<WebBookReViewDSM.Models.UsuarioViewModel>

@{
    ViewBag.Title = "Amigos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Amigos</h2>

<div class="container">
    @foreach (var item in Model)
    {

        <div class="container-fluid div_amigos">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <img height="140" width="140" src="~/imgs/@Html.DisplayFor(modelItem => item.fotoperfil)" />
                    @Html.DisplayFor(modelItem => item.nombre)
                </div>

                <div class="col-xs-8 col-sm-6 col-md-4 col-lg-2 botones">
                    <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-star"></button>
                </div>
                <div class="col-xs-8 col-sm-6 col-md-4 col-lg-2 botones">
                    <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-trash"></button>
                    @Html.ActionLink("Eliminar amigo", "DeleteAmigo", new { id = item.usuarioID })
                </div>
                <div class="col-xs-8 col-sm-6 col-md-4 col-lg-2 botones">
                    <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-bullhorn"></button>
                    Reportar usuario
                </div>

            </div><!--el div de row que separa cada espacio de amigos-->
        </div><!--el div del container de amigos que agrupa todos los amigos-->

    }
</div>

